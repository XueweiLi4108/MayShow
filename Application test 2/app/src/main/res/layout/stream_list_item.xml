<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:background="@drawable/card_btn_bg"
    android:padding="8dp"
    android:layout_margin="8dp">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/play"
        android:visibility="visible"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/liveLabel"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:paddingLeft="8dp"
        android:layout_alignLeft="@id/image"
        android:layout_alignTop="@id/image"
        android:background="@drawable/live_red_bg"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/live"
        android:drawablePadding="8dp"
        android:textStyle="bold|italic"
        android:textColor="@color/white"
        android:gravity="left|center_vertical"
        android:textSize="16sp"
        android:visibility="visible"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/rightTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image"
        android:layout_alignParentRight="true"
        android:fontFamily="sans-serif-condensed"
        android:text=""
        android:textStyle="bold"
        android:textColor="@color/black_overlay"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image"
        android:layout_alignParentLeft="true"
        android:fontFamily="sans-serif-condensed"
        android:layout_toLeftOf="@id/rightTitle"
        android:text=""
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginRight="0dp"
        android:textColor="@color/kickflip_white"
        android:layout_alignTop="@+id/liveLabel"
        android:layout_alignParentEnd="true"
        android:gravity="end"
        android:textSize="23dp"
        android:background="@color/fadein"
        android:drawablePadding="8dp"
        android:fontFamily="sans-serif-condensed"
        android:text="asdasdada"
        android:layout_marginTop="8dp"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        />

</RelativeLayout>